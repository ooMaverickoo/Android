<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="scroll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/backrepeat</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="relative_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
    </style>


    <style name="logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="better_world_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="background_image_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="description_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="normal_text_view_attributes">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColorLink">@color/light_blue</item>
        <item name="android:drawablePadding">@dimen/normal_padding</item>
        <item name="android:gravity">center_vertical</item>


    </style>


    <style name="header_blue_line_bold">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_3dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/light_blue</item>

    </style>


    <style name="header_blue_line_thin">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/light_blue</item>

    </style>


    <style name="header_blue_line_thin_bottom">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>


    <style name="normal_blue_line_bold">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_3dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="normal_blue_line_thin">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:background">@color/light_blue</item>
    </style>


    <style name="normal_blue_line_thin_bottom">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:background">@color/light_blue</item>
    </style>


    <style name="footer_blue_line_bold">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_3dp</item>
        <item name="android:background">@color/light_blue</item>

    </style>


    <style name="footer_blue_line_thin">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:background">@color/light_blue</item>

    </style>


    <style name="footer_blue_line_thin_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:background">@color/light_blue</item>
    </style>


    <style name="normal_layout_attributes">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>


    </style>

    <style name="transparency_layout_attributes">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/alpha_20_light_grey</item>
        <item name="android:orientation">vertical</item>


    </style>


    <style name="footer_text_style_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>

    </style>


    <style name="footer_text_style_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="button_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size</item>

    </style>


    <style name="data_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/alpha_20_light_grey</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>

    </style>


</resources>
