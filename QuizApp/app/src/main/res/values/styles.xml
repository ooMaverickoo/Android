<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorGreen</item>
        <item name="android:colorBackground">@color/colorBlack</item>

    </style>


    <style name="quiz_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="quiz_header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">@dimen/header_string_size</item>

    </style>


    <style name="quiz_question_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/transparentGreen</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>


    <style name="welcome_header_style" parent="quiz_header_style">
        <item name="android:textSize">@dimen/welcome_text_size</item>
    </style>


    <style name="quiz_edit_text_style" parent="quiz_question_text_style">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size_1dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_16dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@color/transparentGreen</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="inner_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="inner_window_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparentInnerWindowColor</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>


    <style name="outer_layout_style" parent="inner_layout_style">

    </style>


    <style name="checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:checked">false</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/transparentGreen</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="checkbox_inner_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="checkbox_outer_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="radio_button_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="radio_button__style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/transparentGreen</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>


</resources>
